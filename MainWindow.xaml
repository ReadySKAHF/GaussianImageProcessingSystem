<Window x:Class="GaussianImageProcessingSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GaussianImageProcessingSystem.ViewModels"
        xmlns:converters="clr-namespace:GaussianImageProcessingSystem.Converters"
        mc:Ignorable="d"
        Title="Распределённая система обработки изображений | TCP Master-Slave архитектура" 
        Height="850" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <converters:StringContainsConverter x:Key="StringContainsConverter"/>

        <!-- Цветовая палитра -->
        <SolidColorBrush x:Key="DarkBackground" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="MediumDarkBackground" Color="#2D2D30"/>
        <SolidColorBrush x:Key="LightDarkBackground" Color="#3E3E42"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#007ACC"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#16C60C"/>
        <SolidColorBrush x:Key="AccentRed" Color="#E81123"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#F7630C"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="BorderColor" Color="#555555"/>

        <!-- Стиль для кнопок -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBlue}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GreenButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource AccentGreen}"/>
        </Style>

        <Style x:Key="RedButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource AccentRed}"/>
        </Style>

        <Style x:Key="OrangeButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource AccentOrange}"/>
        </Style>

        <!-- Стиль для TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource MediumDarkBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CaretBrush" Value="{StaticResource AccentBlue}"/>
        </Style>

        <!-- ИСПРАВЛЕННЫЙ Стиль для ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource MediumDarkBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Focusable="False"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.Column="0"
                                                    Name="ContentSite"
                                                    IsHitTestVisible="False"
                                                    Content="{TemplateBinding SelectionBoxItem}"
                                                    ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                    ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                    Margin="8,6"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left">
                                        <ContentPresenter.Resources>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                            </Style>
                                        </ContentPresenter.Resources>
                                    </ContentPresenter>
                                    <Path Grid.Column="1"
                                        x:Name="Arrow"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Data="M 0 0 L 4 4 L 8 0 Z"
                                        Fill="{StaticResource TextPrimary}"/>
                                </Grid>
                            </ToggleButton>
                            <Popup Name="Popup"
                                 Placement="Bottom"
                                 IsOpen="{TemplateBinding IsDropDownOpen}"
                                 AllowsTransparency="True"
                                 Focusable="False"
                                 PopupAnimation="Slide">
                                <Grid Name="DropDown"
                                    SnapsToDevicePixels="True"
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                          Background="{StaticResource MediumDarkBackground}"
                                          BorderBrush="{StaticResource BorderColor}"
                                          BorderThickness="1">
                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для элементов ComboBox -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="{StaticResource MediumDarkBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Name="Border"
                              Background="{TemplateBinding Background}"
                              BorderThickness="0"
                              Padding="{TemplateBinding Padding}">
                            <ContentPresenter>
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource LightDarkBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для Label -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для заголовков панелей -->
        <Style x:Key="PanelHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Стиль для разделителей -->
        <Style x:Key="Separator" TargetType="Border">
            <Setter Property="Height" Value="1"/>
            <Setter Property="Background" Value="{StaticResource BorderColor}"/>
            <Setter Property="Margin" Value="0,10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Верхняя панель управления -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Bar -->
        <Border Grid.Row="0" Background="#252526" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1">
            <Grid Margin="20,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="КОНФИГУРАЦИЯ УЗЛА" 
                              Foreground="{StaticResource AccentBlue}"
                              FontSize="18" 
                              FontWeight="Bold"
                              VerticalAlignment="Center"/>
                    <Border Width="2" Height="20" Background="{StaticResource BorderColor}" Margin="15,0"/>
                    <TextBlock Text="Статус:" 
                              Foreground="{StaticResource TextSecondary}"
                              FontSize="14"
                              VerticalAlignment="Center"
                              Margin="0,0,8,0"/>
                    <Ellipse Width="12" Height="12" VerticalAlignment="Center" Margin="0,0,8,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="{StaticResource AccentRed}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                        <Setter Property="Fill" Value="{StaticResource AccentGreen}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock VerticalAlignment="Center" FontSize="14" FontWeight="Medium">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="ОТКЛЮЧЕН"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentRed}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                        <Setter Property="Text" Value="ПОДКЛЮЧЕН"/>
                                        <Setter Property="Foreground" Value="{StaticResource AccentGreen}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="ЗАПУСТИТЬ УЗЕЛ" 
                           Command="{Binding StartNodeCommand}"
                           Style="{StaticResource GreenButton}"
                           MinWidth="140"/>
                    <Button Content="ОСТАНОВИТЬ УЗЕЛ" 
                           Command="{Binding StopNodeCommand}"
                           Style="{StaticResource RedButton}"
                           MinWidth="140"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar -->
            <Border Grid.Column="0" Background="#252526" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <!-- Node Type Selection -->
                        <TextBlock Text="ТИП УЗЛА" Style="{StaticResource PanelHeader}"/>
                        <ComboBox ItemsSource="{Binding NodeTypes}" 
                                 SelectedItem="{Binding SelectedNodeType}"
                                 IsEnabled="{Binding CanStart}"
                                 Margin="0,0,0,20"/>

                        <!-- Network Configuration -->
                        <TextBlock Text="НАСТРОЙКИ СЕТИ" Style="{StaticResource PanelHeader}"/>

                        <Label Content="Локальный порт"/>
                        <TextBox Text="{Binding LocalPort}" IsEnabled="{Binding CanStart}" Margin="0,0,0,15"/>

                        <!-- Master Connection (visible for Client/Slave) -->
                        <StackPanel>
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsClientNode}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsSlaveNode}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <Label Content="IP адрес Master"/>
                            <TextBox Text="{Binding MasterIp}" IsEnabled="{Binding CanStart}" Margin="0,0,0,15"/>

                            <Label Content="Порт Master"/>
                            <TextBox Text="{Binding MasterPort}" IsEnabled="{Binding CanStart}" Margin="0,0,0,15"/>
                        </StackPanel>

                        <Border Style="{StaticResource Separator}"/>

                        <!-- Filter Configuration (Client only) -->
                        <StackPanel>
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsClientNode}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <TextBlock Text="КОНФИГУРАЦИЯ ФИЛЬТРА" Style="{StaticResource PanelHeader}"/>

                            <Label Content="Размер ядра Гаусса"/>
                            <ComboBox ItemsSource="{Binding FilterSizes}"
                                     SelectedItem="{Binding SelectedFilterSize}"
                                     Margin="0,0,0,20"/>

                            <Border Style="{StaticResource Separator}"/>

                            <TextBlock Text="ОПЕРАЦИИ КЛИЕНТА" Style="{StaticResource PanelHeader}"/>

                            <Button Content="ЗАГРУЗИТЬ ИЗОБРАЖЕНИЯ" 
                                   Command="{Binding LoadImagesCommand}"
                                   Style="{StaticResource ModernButton}"
                                   Margin="0,0,0,10"/>

                            <Button Content="ОТПРАВИТЬ НА ОБРАБОТКУ" 
                                   Command="{Binding SendImagesCommand}"
                                   Style="{StaticResource OrangeButton}"
                                   Margin="0,0,0,10"/>

                            <Button Content="СОХРАНИТЬ РЕЗУЛЬТАТЫ" 
                                   Command="{Binding SaveProcessedImagesCommand}"
                                   Style="{StaticResource ModernButton}"
                                   Margin="0,0,0,10"/>
                        </StackPanel>

                        <!-- System Log -->
                        <Border Style="{StaticResource Separator}"/>

                        <Grid Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="ЖУРНАЛ СИСТЕМЫ" Style="{StaticResource PanelHeader}"/>

                            <Button Grid.Row="1" Content="ОЧИСТИТЬ ЖУРНАЛ" 
                                   Command="{Binding ClearLogsCommand}"
                                   Style="{StaticResource RedButton}"
                                   HorizontalAlignment="Stretch"
                                   Margin="0,0,0,10"/>
                        </Grid>

                        <Border Background="{StaticResource MediumDarkBackground}" 
                               BorderBrush="{StaticResource BorderColor}"
                               BorderThickness="1"
                               Height="300">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding LogMessages}" Margin="10">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" 
                                                      FontFamily="Consolas" 
                                                      FontSize="11"
                                                      Foreground="{StaticResource TextSecondary}"
                                                      TextWrapping="Wrap"
                                                      Margin="0,2"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Content Area -->
            <Grid Grid.Column="1" Background="{StaticResource DarkBackground}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Content Header -->
                <Border Grid.Row="0" Background="#252526" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1" Padding="20,15">
                    <Grid>
                        <TextBlock Text="РАБОЧЕЕ ПРОСТРАНСТВО ОБРАБОТКИ ИЗОБРАЖЕНИЙ" 
                                  Foreground="{StaticResource TextPrimary}"
                                  FontSize="18" 
                                  FontWeight="Bold"/>
                    </Grid>
                </Border>

                <!-- Image Gallery -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
                    <ItemsControl ItemsSource="{Binding Images}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource MediumDarkBackground}" 
                                       BorderBrush="{StaticResource BorderColor}"
                                       BorderThickness="1"
                                       CornerRadius="5"
                                       Margin="0,0,0,20"
                                       Padding="20">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Header -->
                                        <Grid Grid.Row="0" Margin="0,0,0,15">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                      Text="{Binding FileName}" 
                                                      Foreground="{StaticResource TextPrimary}"
                                                      FontSize="16" 
                                                      FontWeight="SemiBold"
                                                      VerticalAlignment="Center"/>

                                            <Border Grid.Column="1"
                                                   Background="{StaticResource LightDarkBackground}"
                                                   Padding="10,5"
                                                   CornerRadius="3">
                                                <TextBlock FontSize="12" FontWeight="Medium">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="ОЖИДАНИЕ"/>
                                                            <Setter Property="Foreground" Value="{StaticResource AccentOrange}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsProcessed}" Value="True">
                                                                    <Setter Property="Text" Value="ЗАВЕРШЕНО"/>
                                                                    <Setter Property="Foreground" Value="{StaticResource AccentGreen}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </Grid>

                                        <!-- Images -->
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="20"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Original Image -->
                                            <Border Grid.Column="0" 
                                                   Background="{StaticResource LightDarkBackground}"
                                                   BorderBrush="{StaticResource BorderColor}"
                                                   BorderThickness="1"
                                                   CornerRadius="3"
                                                   Padding="15">
                                                <StackPanel>
                                                    <TextBlock Text="ОРИГИНАЛ" 
                                                              Foreground="{StaticResource AccentBlue}"
                                                              FontSize="12"
                                                              FontWeight="Bold"
                                                              Margin="0,0,0,10"
                                                              HorizontalAlignment="Center"/>
                                                    <Image Source="{Binding OriginalImage}" 
                                                          MaxHeight="300" 
                                                          Stretch="Uniform"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Arrow -->
                                            <TextBlock Grid.Column="1" 
                                                      Text="→" 
                                                      Foreground="{StaticResource AccentBlue}"
                                                      FontSize="24"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>

                                            <!-- Processed Image -->
                                            <Border Grid.Column="2" 
                                                   Background="{StaticResource LightDarkBackground}"
                                                   BorderBrush="{StaticResource BorderColor}"
                                                   BorderThickness="1"
                                                   CornerRadius="3"
                                                   Padding="15">
                                                <StackPanel>
                                                    <TextBlock Text="ФИЛЬТР ГАУССА" 
                                                              Foreground="{StaticResource AccentGreen}"
                                                              FontSize="12"
                                                              FontWeight="Bold"
                                                              Margin="0,0,0,10"
                                                              HorizontalAlignment="Center"/>
                                                    <Grid>
                                                        <Image Source="{Binding ProcessedImage}" 
                                                              MaxHeight="300" 
                                                              Stretch="Uniform"/>

                                                        <!-- Placeholder when not processed -->
                                                        <Border Background="{StaticResource MediumDarkBackground}" 
                                                               Opacity="0.95"
                                                               CornerRadius="3">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding HasProcessedImage}" Value="False">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                                                                <TextBlock Text="ОЖИДАНИЕ ОБРАБОТКИ" 
                                                                          Foreground="{StaticResource TextSecondary}"
                                                                          FontSize="14"
                                                                          FontWeight="Medium"
                                                                          HorizontalAlignment="Center"/>
                                                                <TextBlock Text="Отправьте изображение на мастер узел" 
                                                                          Foreground="{StaticResource TextSecondary}"
                                                                          FontSize="11"
                                                                          Margin="0,5,0,0"
                                                                          HorizontalAlignment="Center"
                                                                          TextWrapping="Wrap"
                                                                          TextAlignment="Center"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </Grid>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>